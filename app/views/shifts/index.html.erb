<h2>Listing All Shifts</h2>
<th >    Active Stores  </th>
<table class="highlight"> 
  <tr>
    <th> Date            </th>
    <th>Start_Time</th>
    <th>End_Time</th>
  </tr>
<% if @shifts.count == 0%>
<td>There are no active stores</td>
<%else%>
<% @shifts.each do |shift| %>
  <tr>
    <td><%= shift.date %></td>
    <td><%= shift.start_time%></td>
    <% if shift.end_time !=nil %>
        <td><%= shift.end_time %></td>
    <% else %>
        <td> - </td>
    <% end %>
    <td><%= shift.notes %>/td>
    <td><%= shift.status %>/td>
    
    <td><%= link_to 'Edit', edit_store_path(store),:class=> "waves-effect waves-light btn light-blue" %></td>
    <td><%= link_to 'Destroy', store, confirm: 'Are you sure?', method: :delete, :class=> "waves-effect waves-light btn red" %></td>

  </tr>
<% end %>
<% end %>

</table>
<br />
<!-- Add the pagination using will_paginate gem -->
<span class="paginate">
<%= will_paginate @shifts, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
</span>

